@{
     ViewBag.Title = "Detalii livrare";
}

<h2 class="text-success mb-4">Completează detaliile de livrare</h2>

<form method="post" action="/Orders/ConfirmDelivery" class="col-md-6 mx-auto shadow-sm p-4 bg-light rounded">
     <div class="mb-3">
          <label class="form-label">Adresă de livrare</label>
          <input type="text" name="ShippingAddress" class="form-control" required />
     </div>

     <div class="mb-3">
          <label class="form-label">Număr de telefon</label>
          <input type="tel" name="Phone" class="form-control" required />
     </div>

     <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="Email" class="form-control" required />
     </div>

     <div class="mb-3">
          <label class="form-label">Metodă de plată</label>
          <select name="PaymentMethod" class="form-select" required>
               <option value="Cash">Cash la livrare</option>
               <option value="Card">Card bancar</option>
          </select>
     </div>

     <button type="submit" class="btn btn-success w-100">
          <i class="bi bi-check-circle"></i> Confirmă și plasează comanda
     </button>
</form>
