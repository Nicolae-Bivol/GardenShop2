@{
    ViewBag.Title = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <h3 class="text-center text-success mb-3">Create Account</h3>
        <p class="text-muted text-center mb-4">Register to start shopping</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input name="username" class="form-control" placeholder="Choose username" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Choose password" required />
            </div>
            <button type="submit" class="btn btn-success w-100 mt-2">Register</button>

            <div class="text-center mt-3">
                <small class="text-muted">Already have an account?</small><br />
                <a href="/Autentification/Login" class="text-success">Login here</a>
            </div>
        </form>
    </div>
</div>